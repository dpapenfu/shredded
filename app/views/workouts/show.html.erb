<p id="notice"><%= notice %></p>

<p>
  <strong>Workout:</strong>
  <%= @workout.workout %>
</p>

<p>
  <strong>Summary:</strong>
  <%= @workout.summary %>
</p>

<br>
<h3>Reviews</h3>

<table>
  <thead>
    <tr>
      <th>Rating</th>
      <th>Review</th>
      <th>Reviewer</th>
      <th colspan="1">Details</th>
    </tr>
  </thead>

  <tbody>
    <% @workout_reviews.each do |review| %>
      <tr>
        <td><%= review.star_rating %></td>
        <td><%= review.comment %></td>
        <td><%= review.user.username %></td>
        
        <td><%= link_to 'Show', review %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
 


<% if current_user %>
<%= render"shared/form"%>
<%else%>
<%= link_to'Please Sign in or sign-up to review',new_user_session_path(@devise) %>
<% end %>
<%= link_to 'Back', workouts_path %> |
<%= link_to 'Edit', edit_workout_path(@workout) %>
