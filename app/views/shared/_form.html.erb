<h1>Review this workout</h1>

<%= form_with model: @review, url: reviews_path  do |form| %>
  <div class="field">
    <%= form.label :star_rating %>
    <%= form.number_field :star_rating, max:5, min:0 %>
  </div>
  <div class="field">
    <%= form.label :comment %>
    <%= form.text_field :comment %>
  </div>

  <div class="field">
    <%= form.hidden_field :user_id, value: current_user.id %>
  </div>

  <div class="field">
    <%= form.hidden_field :workout_id, value: @workout.id %>
    
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
