<h1> <%= @user.username%></h1>


<h3>Reviews</h3>

<table>
  <thead>
    <tr>
      <th>Rating</th>
      <th>Review</th>
      <th colspan="1">Details</th>
    </tr>
  </thead>

  <tbody>
    <% current_user.reviews.each do |review|%>
      <tr>
        <td><%= review.star_rating %></td>
        <td><%= review.comment %></td>      
        <td><%= link_to 'Show', review %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
