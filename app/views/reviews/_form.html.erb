    <%= form.label :comment %>
    <%= form.text_field :comment %>
  </div>

  <div class="field">
    <%= form.hidden_field :user_id, value: current_user.id %>
  </div>

  <div class="field">
    <%= form.hidden_field :workout_id, value: 1 %>
    
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
